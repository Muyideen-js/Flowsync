{
    "version": 2,
    "builds": [
        {
            "src": "backend/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ],
    "env": {
        "TELEGRAM_BOT_TOKEN": "@telegram_bot_token",
        "TWITTER_CLIENT_ID": "@twitter_client_id",
        "TWITTER_CLIENT_SECRET": "@twitter_client_secret"
    }
}